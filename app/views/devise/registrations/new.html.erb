<div class='col-sm-5'>
  <% provide :page_title, t(".sign_up") %>
  <% currently_at t("navbar.sign_up") %>
  <h1 class='md-4'><%= t(".sign_up") %></h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :role, as: :select, collection: User::VALID_ROLES,
                  required: true,
                  autofocus: true ,
                  input_html: { autocomplete: "role" } %>
      <%= f.input :email,
                  required: true,
                  autofocus: true ,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(".sign_up"), class: 'btn btn-outline-primary my-2' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>