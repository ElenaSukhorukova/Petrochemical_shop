<%= provide :supply_menu do %>
  <aside>
    <nav class="nav card mt-2">
      <div class='container card-body'>
        <ul class="navbar-nav text-center">   
          <% if user_signed_in? && current_user.employee.present? %>
            <li class="nav-item card-title line">
              <%= nav_tab_right t('navbar.profile', user: current_user.employee.full_name), 
              supply_manager_path(current_user.employee), class: "nav-link", current_page: current_page %>
            </li>
            <li class="nav-item card-title line">
              <%= nav_tab_right i18n_model_name(Kind.new, count: 2), 
                supply_managers_kinds_path, class: "nav-link", current_page: current_page %>
            </li>
            <li class="nav-item card-title line">
              <%= nav_tab_right i18n_model_name(Product.new, count: 2), 
                supply_managers_products_path, class: "nav-link", current_page: current_page %>
            </li>
            <li class="nav-item card-title line">
              <%= nav_tab_right i18n_model_name(Department.new, count: 2), 
                departments_path, class: "nav-link", current_page: current_page %>
            </li>
            <li class="nav-item card-title line">
              <%= nav_tab_right i18n_model_name(Supplier.new, count: 2), 
                suppliers_path, class: "nav-link", current_page: current_page %>
            </li>
          <% elsif user_signed_in? && !current_user.employee.present? %>
            <li class="nav-item card-title line">
              <%= nav_tab_right t('navbar.new_profile'), new_supply_manager_path, 
                class: "nav-link", current_page: current_page %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </aside>
<% end %>