<%= simple_form_for model, method: method do |f| %>
  <%= f.input :name_department, input_html: { class: 'my-2'} %>
  <%= f.input :description, input_html: { class: 'my-2'} %>
	<%= f.button :submit, submit, class: 'btn btn-outline-primary my-2' %>			
	<%= render partial: 'shared/cancel_button', locals: { path: department_path(f.object) } if f.object.persisted? %>
<% end %>
