<%= simple_form_for model, method: method do |f| %>
  <%= f.input :full_name, input_html: { class: 'my-2'} %>
  <%= f.input :gender, as: :select, collection: Employee::VALID_GENDERS, 
                      include_blank: false, input_html: { class: 'my-2'} %>
  <%= f.input :date_birthday, as: :date, start_year: Date.today.year - 70,
                              end_year: Date.today.year - 18,
															input_html: { class: 'my-2'} %>
  <%= f.input :department_id, as: :select, collection: @departments, 
                          label_method: :name_department, value_method: :id,
                          include_blank: false, input_html: { class: 'form-control my-2' } %>
  <%= f.input :personal_phone_number, input_html: { class: 'my-2' } %>
  <%= f.input :work_phone_number, input_html: { class: 'my-2'} %>
  <%= f.input :additional_number, input_html: { class: 'my-2'} %>
  <%= f.input :email, input_html: { class: 'my-2'} %>
  <%= f.input :about, input_html: { class: 'my-2'} %>
	<%= f.button :submit, submit, class: 'btn btn-outline-primary my-2' %>			
	<%= render partial: 'shared/cancel_button', locals: { path: path } if f.object.persisted? %>
<% end %>
