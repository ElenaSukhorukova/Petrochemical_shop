<section>
  <% provide :page_title, @product.name %>
  <% currently_at %>
  <h1 class='my-4'><%= @product.name %></h1>

  <%= render partial: 'shared/go_back_button', locals: { path: supply_managers_products_path } %>
  <section class='card'>
    <div class='card-body'>
      <p class='card-text'>
        <strong><%= attribute_model(@product.kind, :name_kind) %></strong>
        <%= @product.kind.name_kind %>
      </p>
      <p class='card-text'>
        <strong><%= attribute_model(@product.departments.first, :name_department) %></strong>
        <% @product.departments.collect do |department| %>
          <%= department.name_department %>
        <% end %>
      </p>
      <p class='card-text'>
        <strong><%= attribute_model(@product, :description) %></strong>
        <%= simple_format(@product.description) %>
      </p>

      <% if define_permition? %>
        <div class="btn-group mt-2" role="group">
          <%= link_to t('link.edit', model: i18n_model_name(@product).downcase), 
            edit_supply_managers_product_path(@product), class: 'btn btn-outline-primary my-2 mx-2' %>
          <%= button_to t('submit.delete', model: i18n_model_name(@product).downcase), 
            supply_managers_product_path(@product), method: :delete, class: 'btn btn-outline-primary my-2 mx-2', 
            :onclick => "return confirm('Are you sure?')", :remote => true %>
        </div>
      <% end %>
    </div>
  </section>
</section>