<%= simple_form_for @reception, method: :patch do |f| %>
  <div class="form-check form-switch">
    <%= f.input :confirmation, input_html: {class: "form-check-input", type: "checkbox",
                              role: "switch", id:"flexSwitchCheckDefault" } %>
  </div>
	<%= f.button :submit, t('submit.confirm'), class: 'btn btn-outline-light' %>
<% end %>
          
